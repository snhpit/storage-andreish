@using System.Web.UI.WebControls
@model Mvc.Entities.InputInfo
@{
    ViewBag.Title = "Home Page";
}
<h2>@ViewBag.Message</h2>
<div class="centerwrapper">
    @using (Ajax.BeginForm("Index", "Home", new AjaxOptions
        {
            Url = Url.Action("Index", "Home"),
            //LoadingElementId = "loading",
            //LoadingElementDuration = 2000,
            //OnSuccess = "onSuccess",
            HttpMethod = "Post"
        }))
    {
        <div id="" class="loader">
        </div>
        <p>
            @Html.TextBoxFor(model => model.Company, new { id = "company", placeholder = "Company symbol" })
            <input type="submit" value="Get quotes" />
        </p>
        <p>
            @Html.TextBoxFor(model => model.DateFrom, new { id = "from", placeholder = "From" })
            @Html.TextBoxFor(model => model.DateTo, new { id = "to", placeholder = "To" })
        </p>
        <div id="radio">
            @Html.RadioButtonFor(model => model.Provider, "Google", new { id = "radio1", value = "Google" })
            @Html.Label("radio1", "Google");
            @Html.RadioButtonFor(model => model.Provider, "Yahoo", new { id = "radio2", value = "Yahoo" })
            @Html.Label("radio2", "Yahoo");
        </div>
    }
    <div id="finance-historical">
    </div>
    @if (ViewData["Quotes"] != null)
    {
        @Html.Partial("Table", ViewData["Quotes"] as IEnumerable<Mvc.Entities.Quote>)
    }
</div>